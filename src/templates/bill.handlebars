      } .secondTable { width: 100%; max-width: 100%; margin-bottom: 1rem;
      border: 1px solid #F8F8F8; border-collapse: collapse; padding: 1rem; }
      .secondTable td { border: 1px solid #F8F8F8; padding: 1rem; } .secondTable
      th { border: 1px solid #F8F8F8; background-color: #F8F8F8; padding: 1rem;
